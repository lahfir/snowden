{
  "manifest_version": 3,
  "name": "Snowden AI - Claude Chat Exporter",
  "version": "1.0.0",
  "description": "Export Claude.ai conversations as Markdown or PDF",
  "permissions": [
    "webNavigation",
    "cookies"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
